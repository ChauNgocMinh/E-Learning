@{
    ViewData["Title"] = "Home Page";
}
<style>
    .image-wrapper {
        background-color:#fff0eb; 
        padding: 60px 10px 60px 10px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .image-wrapper img {
        display: block;
        margin: 0 auto;
    }

    .main-images > div {
        display: none;
    }

    .main-images > div.active {
        display: block;
    }

    /* thumbnail bên phải */
    .col-right {
        position: relative;
        margin: 0 auto;
    }

    .home .col-right .img-wrapper {
        position: relative;
        overflow: hidden;
        cursor: pointer;
        border-radius: 8px;
    }

    .home .col-right .img-wrapper img {
        display: block;
        width: 100%;
        transition: transform 0.3s ease;
    }

    .home .col-right .img-wrapper:hover img {
        transform: scale(1.05);
    }

    .home .col-right .img-wrapper::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .home .col-right .img-wrapper:hover::after {
        opacity: 1;
    }

    .home .col-right .img-wrapper span {
        position: absolute;
        bottom: -40px;
        left: 50%;
        transform: translateX(-50%);
        color: #fff;
        font-weight: 600;
        background: rgba(0,0,0,0.6);
        padding: 6px 12px;
        border-radius: 20px;
        opacity: 0;
        transition: all 0.4s ease;
        pointer-events: none;
    }

    .home .col-right .img-wrapper:hover span {
        bottom: 50%;
        transform: translate(-50%, 50%);
        opacity: 1;
    }

    .highlight-bar {
        position: absolute;
        height: 6px;
        background: rgba(0,0,0,0.6);
        border-radius: 3px;
        bottom: -10px;
        left: 0;
        width: 0;
        z-index: -1;
        transition: all 0.3s ease;
    }
</style>

<div class="home">
    <div class="list-item-img row">
        <div class="col-md-7 col-left main-images image-wrapper" id="imageWrapper">
            <div class="active">
                <img src="/img/logo/hero-title.svg" width="561" height="54" alt="none" />
                <img src="/img/logo/logo-homepage-main.svg" alt="none">
            </div>
            <div>
                <img src="/img/logo/hero-title.svg" width="561" height="54" alt="none" />
                <img src="/img/logo/item-img-main-01.png" alt="none" />
            </div>
            <div>
                <img src="/img/logo/hero-title.svg" width="561" height="54" alt="none" />
                <img src="/img/logo/item-img-main-02.png" alt="none" />

            </div>
            <div>
                <img src="/img/logo/hero-title.svg" width="561" height="54" alt="none" />
                <img src="/img/logo/item-img-main-03.png" alt="none" />
            </div>
            <div>
                <img src="/img/logo/hero-title.svg" width="561" height="54" alt="none" />
                <img src="/img/logo/item-img-main-04.png" alt="none" />
            </div>
        </div>

        <div class="col-right col-md-4 p-5 position-relative">
            <div class="row g-1">
                <div class="col-6">
                    <div class="ratio ratio-1x1 img-wrapper" data-bg="#e5f9f9">
                        <img src="/img/logo/item-img-01.svg" alt="none" data-index="1" />
                        <span>Luyện tập ngay</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="ratio ratio-1x1 img-wrapper" data-bg="#eeeefb">
                        <img src="/img/logo/item-img-02.svg" alt="none" data-index="2" />
                        <span>Luyện tập ngay</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="ratio ratio-1x1 img-wrapper" data-bg="#ffecf0">
                        <img src="/img/logo/item-img-03.svg" alt="none" data-index="3" />
                        <span>Luyện tập ngay</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="ratio ratio-1x1 img-wrapper" data-bg="#ffedd1">
                        <img src="/img/logo/item-img-04.svg" alt="none" data-index="4" />
                        <span>Luyện tập ngay</span>
                    </div>
                </div>
            </div>

            <div class="highlight-bar" id="highlight"></div>
        </div>
    </div>
</div>

<script>
    const highlight = document.getElementById("highlight");
    const wrappers = document.querySelectorAll(".col-right .img-wrapper");
    const bigImages = document.querySelectorAll(".main-images > div");
    const imageWrapper = document.getElementById("imageWrapper");

    bigImages.forEach(img => img.classList.remove("active"));
    bigImages[0].classList.add("active");

    wrappers.forEach(wrapper => {
    const thumb = wrapper.querySelector("img");
    const index = parseInt(thumb.dataset.index);
    const bgColor = wrapper.getAttribute("data-bg");

    wrapper.addEventListener("mouseenter", function () {
        bigImages.forEach(div => div.classList.remove("active"));
        if (bigImages[index]) {
            bigImages[index].classList.add("active");
        }
        imageWrapper.style.backgroundColor = bgColor;

        const top = wrapper.offsetTop + wrapper.offsetHeight + 5;
        const left = wrapper.offsetLeft;
        highlight.style.top = top + "px";
        highlight.style.left = left + "px";
        highlight.style.width = wrapper.offsetWidth + "px";
    });

    wrapper.addEventListener("mouseleave", function () {
        bigImages.forEach(div => div.classList.remove("active"));
        bigImages[0].classList.add("active"); // mặc định
        imageWrapper.style.backgroundColor = "#fff0eb";
        highlight.style.width = "0";
    });
});
</script>
