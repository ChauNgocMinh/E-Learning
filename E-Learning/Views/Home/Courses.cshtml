<style>
    .head{
        border-bottom: 1px solid #c7c7cc;
        margin-bottom: 10px;
    }

    .search-input {
        border-radius: 32px;
        padding: 0.5rem 1rem; 
    }

    .filter-panel {
        height: 0;
        overflow: hidden;
        padding: 0 10px 0 10px;
        transition: height 0.4s ease, padding 0.4s ease;
    }

    .filter-section {
        border: 1px solid #a0d4b8;
        background-color: #f0fcf6;
        padding: 1rem;
        border-radius: 0.5rem;
        margin: 8px 0;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .filter-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .title-section {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 4px 12px;
        border-radius: 1rem;
        background-color: #d9f2e6;
        cursor: pointer;
        transition: background 0.3s;
    }

        .title-section:hover {
            background-color: #b8e6c5;
        }

        .title-section input[type="radio"] {
            margin-right: 6px;
        }

    .box_item {
        position: relative;
        overflow: hidden; /* bình thường */
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .box_item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
            overflow: visible;
        }

    .flag_hover {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.9);
        z-index: 10;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        overflow-y: auto; 
    }

    .box_item:hover .flag_hover {
        display: flex;
        pointer-events: auto;
    }
</style>
