<script>
    const itemsPerPage = 4; // số item mỗi trang
    const items = document.querySelectorAll(".list_product .col-md-6");
    const pagination = document.querySelector(".pagination");
    const totalPages = Math.ceil(items.length / itemsPerPage);
    let currentPage = 1;

    function showPage(page) {
        items.forEach((item, index) => {
            item.style.display = (index >= (page - 1) * itemsPerPage && index < page * itemsPerPage)
                ? "block" : "none";
        });

        // active page
        const pageLinks = pagination.querySelectorAll(".page-item");
        pageLinks.forEach(link => link.classList.remove("active"));
        // +1 vì "Trước" là phần tử đầu
        if (pageLinks[page]) pageLinks[page].classList.add("active");
    }

    function setupPagination() {
        pagination.innerHTML = `
                <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                ${Array.from({ length: totalPages }, (_, i) => `
                    <li class="page-item"><a class="page-link" href="#">${i + 1}</a></li>
                `).join('')}
                <li class="page-item"><a class="page-link" href="#">Sau</a></li>
            `;

        const pageItems = pagination.querySelectorAll(".page-item a");
        pageItems.forEach((btn, index) => {
            btn.addEventListener("click", (e) => {
                e.preventDefault();
                if (btn.innerText === "Trước") {
                    currentPage = Math.max(1, currentPage - 1);
                } else if (btn.innerText === "Sau") {
                    currentPage = Math.min(totalPages, currentPage + 1);
                } else {
                    currentPage = parseInt(btn.innerText);
                }
                showPage(currentPage);
            });
        });
    }

    setupPagination();
    showPage(currentPage);
</script>
