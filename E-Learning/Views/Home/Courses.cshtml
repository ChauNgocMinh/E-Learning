<script>
    const toggleBtn = document.getElementById('toggleFilterBtn');
    const filterPanel = document.getElementById('filterPanel');

    toggleBtn.addEventListener('click', () => {
        if (filterPanel.style.height && filterPanel.style.height !== '0px') {
            // Ẩn panel
            filterPanel.style.height = '0';
            filterPanel.style.paddingTop = '0';
            filterPanel.style.paddingBottom = '0';
        } else {
            // Hiện panel
            const scrollHeight = filterPanel.scrollHeight + 20;
            filterPanel.style.height = scrollHeight + 'px';
            filterPanel.style.paddingTop = '0.5rem';
            filterPanel.style.paddingBottom = '0.5rem';
        }
    });

</script>